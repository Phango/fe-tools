<!DOCTYPE html>
<html>
  <head>
    <title>{{lsgConfig.name}}</title>

    <link rel="stylesheet" href="css/styles.css">
    {{#each lsgConfig.theme.css}}
      <link rel="stylesheet" href="{{this}}">
    {{/each}}
    {{#if lsgConfig.theme.sidebar}}
      <style>
        body {
          {{#if lsgConfig.theme.sidebar.background}}
          --dds-sidebar-background: {{lsgConfig.theme.sidebar.background}};
          {{/if}}
          {{#if lsgConfig.theme.sidebar.textColor}}
          --dds-sidebar-color: {{lsgConfig.theme.sidebar.textColor}};
          {{/if}}
        }
      </style>
    {{/if}}
  </head>
  <body class="dds-page">
    {{> lsg-nav}}
    <main class="dds-page__main">
      {{#each lsgData}}
        {{#each categoryItems}}
          {{> lsg-component }}
        {{/each}}
      {{/each}}
    </main>

    <script src="js/app.js"></script>
    {{#each lsgConfig.theme.js}}
      <script src="{{this}}"></script>
    {{/each}}
  </body>
</html>